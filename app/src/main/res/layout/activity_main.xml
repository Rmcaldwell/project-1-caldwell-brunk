<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/tours_background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/UNCWBuildings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mainTitle"
        android:layout_gravity="center"
        android:textSize="45sp"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="139dp"
        android:layout_height="144dp"
        android:layout_gravity="center"
        android:src="@drawable/good_logo" />

    <Spinner
        android:id="@+id/buildingsSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:entries="@array/buildings" />

    <TextView
        android:id="@+id/space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/buildingsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/findOutAboutTheBuilding"
        android:textColor="@color/black"
        android:background="@drawable/button"
        android:layout_gravity="end"
        android:onClick="onClickFindBuilding"/>

</LinearLayout>