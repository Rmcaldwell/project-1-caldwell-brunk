<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/UNCWBuildings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UNCW Buildings"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:textColor="@color/blue"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/buildingsSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:entries="@array/buildings" />

    <TextView
        android:id="@+id/space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/buildingsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/findOutAboutTheBuilding"
        android:layout_gravity="end"
        android:onClick="onClickFindBuilding"/>

</LinearLayout>